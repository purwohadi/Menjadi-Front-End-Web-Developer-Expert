{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "plugins": ["jest"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "indent": [2, "tab"],
        "no-tabs": 0,
        "linebreak-style": 0,
        "no-underscore-dangle": 0,
        "no-restricted-globals":0,
        "import/no-extraneous-dependencies": 0, 
        "class-methods-use-this": 0,
        "no-plusplus": 0,
        "no-return-assign": 0,
        "no-new": 0
    }
}
